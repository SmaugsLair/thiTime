extends layout

block content
    strong New session for #{user.name}

    form(id='newSessionForm' method='POST' action='')
        div
            label(for='sessionName') Session:
            input.sessionName(type='text', name='sessionName' value=(undefined===session ? '' : session.name), required=true)
            button(type='submit') Submit
            a(href='/gm') Cancel
        if errors
            ul
                for error in errors
                    li!= error.msg