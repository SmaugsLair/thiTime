doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
  #container
    #header
      h1 The Hero Instant Time Tracker
    #wrapper
      #content
        block content
    #navigation
      p
        strong Navigation Menu
      ul
        if (gameMaster)
          li
            a(href='/logout') Logout #{gameMaster.name}
          li
            a(href='/updateGM') Update GM details
          li
            a(href='/gm') Sessions
          li
            a(href='/gm/collection') Collection
        else
          li
            a(href='/login') GameMaster Login
      ul
        li
          a(href='/playerSessions') Player Session views
        li
          a(href='/dice') Dice Roller
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
  script(src='/javascripts/global.js')
  if (refresh)
    script(src='/javascripts/refresh.js')
  if (announce)
    script(src='/javascripts/announce.js')
